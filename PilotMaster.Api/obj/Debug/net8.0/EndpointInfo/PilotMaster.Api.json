          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "grt": {
            "type": "integer",
            "format": "int32"
          },
          "draft": {
            "type": "number",
            "format": "double"
          },
          "age": {
            "type": "integer",
            "format": "int32"
