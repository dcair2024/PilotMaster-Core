{
  "openapi": "3.0.1",
  "info": {
    "title": "PilotMaster.Api",
    "version": "1.0"
  },
  "paths": {
    "/api/Schedule": {
      "get": {
        "tags": [
          "Schedule"
        ],
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "area",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Schedule"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PilotSchedule"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PilotSchedule"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PilotSchedule"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Schedule/{id}/cancel": {
      "put": {
        "tags": [
          "Schedule"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "cancelledBy",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "unknown"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Tariff/calculate": {
      "get": {
        "tags": [
          "Tariff"
        ],
        "parameters": [
          {
            "name": "grt",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "area",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "draft",
            "in": "query",
            "schema": {
              "type": "number",
              "format": "double",
              "default": 0
            }
          },
          {
            "name": "age",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 0
            }
          },
          {
            "name": "emergencial",
            "in": "query",
            "schema": {
              "type": "boolean",
              "default": false
            }
          },
          {
            "name": "extraordinaria",
            "in": "query",
            "schema": {
              "type": "boolean",
              "default": false
            }
          },
          {
            "name": "deficiency",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "None"
            }
          },
          {
            "name": "requiresTug",
            "in": "query",
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "OperationalDeficiency": {
        "enum": [
          0,
          1,
          2,
          3
        ],
        "type": "integer",
        "format": "int32"
      },
      "PilotSchedule": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "scheduledAt": {
            "type": "string",
            "format": "date-time"
          },
          "area": {
            "type": "string",
            "nullable": true
          },
          "shipId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "ship": {
            "$ref": "#/components/schemas/Ship"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "notes": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Ship": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "grt": {
            "type": "integer",
            "format": "int32"
          },
          "draft": {
            "type": "number",
            "format": "double"
          },
          "age": {
            "type": "integer",
            "format": "int32"
          },
          "requiresTug": {
            "type": "boolean"
          },
          "deficiency": {
            "$ref": "#/components/schemas/OperationalDeficiency"
          }
        },
        "additionalProperties": false
      }
    }
  }
}